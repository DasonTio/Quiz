<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="FlashCard.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:FlashCard"    
    Shell.FlyoutBehavior="Disabled"
    Title="FlashCard">
    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />
    <ShellContent
        Title="Detail"
        ContentTemplate="{DataTemplate local:DetailPage}"
        Route="DetailPage" />
    <ShellContent
        Title="Create"
        ContentTemplate="{DataTemplate local:CreateCardPage}"
        Route="CreateCardPage" />

    <ShellContent
        Title="Help"
        ContentTemplate="{DataTemplate local:HelpCloningPage}"
        Route="HelpCloningPage" />
</Shell>
